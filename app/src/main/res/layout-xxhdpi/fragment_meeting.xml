<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:id="@+id/list_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/list_item_layout_marginTop"
        android:layout_marginBottom="@dimen/list_item_layout_marginBottom"
        android:paddingStart="@dimen/list_item_paddingStart"
        android:paddingEnd="@dimen/list_item_paddingEnd">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/meeting_icon_room"
                android:layout_width="@dimen/room_icon_layout_width"
                android:layout_height="@dimen/room_icon_layout_height"
                android:background="@drawable/circle_icon_room"
                android:text="A"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/room_icon_textSize"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/central_text_container_paddingStart"
            android:paddingEnd="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/meeting_subject_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subject"
                    android:textSize="@dimen/central_text_container_first_line_textSize"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/central_text_container_first_line_separator_marginStartEnd"
                    android:layout_marginEnd="@dimen/central_text_container_first_line_separator_marginStartEnd"
                    android:text="-"
                    android:textSize="@dimen/central_text_container_first_line_textSize"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/meeting_date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24/01/2020"
                    android:textSize="@dimen/central_text_container_first_line_textSize"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/central_text_container_first_line_separator_marginStartEnd"
                    android:layout_marginEnd="@dimen/central_text_container_first_line_separator_marginStartEnd"
                    android:text="-"
                    android:textSize="@dimen/central_text_container_first_line_textSize"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/meeting_time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:00"
                    android:textSize="@dimen/central_text_container_first_line_textSize"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/meeting_emails_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:textSize="@dimen/central_text_container_second_line_textSize"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="a.katache@gmail.coma.katache@gmail.coma.katache@gmail.com"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="end">

            <ImageButton
                android:id="@+id/meeting_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_delete_black_24dp"
                android:layout_gravity="center"/>


        </LinearLayout>

    </LinearLayout>

